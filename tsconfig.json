{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2018"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveSymlinks": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "cala-globals", "koa-convert", "koa-router", "pg-rethrow", "promise-events", "dao"]
  },
  "include": [
    "./src/**/*"
  ]
}
