{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2015", "es2016"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "utils", "koa", "koa-router"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/scripts/**/*"
  ]
}
