#!/bin/bash
set -e

# Run the test suite
# Usage: `bin/test`

source bin/util/loadenv
loadenv-test

if [ "$CI" == "true" ]; then
  mkdir -p ./reports
  npx tape "dist/**/*spec.js" | npx tap-xunit > ./reports/tape.xml
else
  echo "Building..."
  bin/util/build
  echo "Linting..."
  bin/lint
  echo "Testing..."
  npx tape "dist/**/*spec.js" | npx tap-difflet --pessimistic
fi
