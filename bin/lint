#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail
set -o noglob

# Run code format checking and linting
# Usage: bin/lint

run() {
  local ci=${CI:-"false"}

  if [[ "$ci" == "true" ]]
  then
    mkdir -p ./reports
    npx eslint src --ignore-path .gitignore --format junit --output-file ./reports/eslint.xml
    npx tslint -p tsconfig.json "src/**/*.ts" -t junit > ./reports/tslint.xml
  else
    npx eslint src --ignore-path .gitignore
    npx tslint -p tsconfig.json "src/**/*.ts" -t stylish
  fi

  npx cala-lint-commented-code
}

run "$@"
