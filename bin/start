#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail
set -o noglob

# Start up production API server
# Relies on config specified in environment variables; does not read from .env
#
# Usage: bin/start

run() {
  if [ ! -d "dist" ]; then
    echo 'No built application found in dist/ directory'
    exit 1
  fi

  node dist
}

run "$@"
