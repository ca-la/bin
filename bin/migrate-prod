#!/bin/bash
set -e

echo "Are you sure you want to migrate the PRODUCTION db? Has your migration-only pull request been merged? Type MIGRATE if you're sure:"
read RES

if [ "$RES" != "MIGRATE" ]; then
  echo "OK, not migrating"
  exit 1
fi

DATABASE_URL=$(heroku config:get DATABASE_URL --app cala-api-prod)?ssl=true $(npm bin)/knex migrate:latest
